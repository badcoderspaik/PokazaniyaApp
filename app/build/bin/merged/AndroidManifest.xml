<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pokazaniya.timofeev.com.pokazaniya"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="pokazaniya.timofeev.com.pokazaniya.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pokazaniya.timofeev.com.pokazaniya.StatisticByCountActivity"
            android:label="@string/statisticByCount"
            android:parentActivityName="pokazaniya.timofeev.com.pokazaniya.MainActivity" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="pokazaniya.timofeev.com.pokazaniya.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="pokazaniya.timofeev.com.pokazaniya.MainActivity" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="pokazaniya.timofeev.com.pokazaniya.services.LEDService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name="pokazaniya.timofeev.com.pokazaniya.Mwidget"
            android:icon="@drawable/widget"
            android:label="Виджет Показания" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_metadata" >
            </meta-data>
        </receiver>
    </application>

</manifest>